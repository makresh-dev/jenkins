pipeline {
    
    agent any


    enviroment {
        IMAGE_TAG = "${BUILD_NUMBER}"
    }


    stages {

        stage('Checkout') {
            steps {
                git credentialId: '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',
                url: 'https://github.com/makresh-dev/jenkins/django-todo-jenkin-argocd-k8s.git',
                branch: 'main',
            }
        }

        stage('Build Docker'){
            steps {
                script {
                    sh '''
                    echo 'Build Docker Image'
                    docker build -t mknnyk/:${BUILD_NUMBER} .
                    '''
                }
            }
        }

        stage('Push the artifacts') {
            steps {
                script {
                    sh '''
                    echo 'Push to Repo'
                    docker push -t mknnyk/:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Checkout K8s manifest SCM') {
            steps{
                git credentialId: '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',
                url: 'https://github.com/makresh-dev/cicd-demo-manifests-repo.git',
                brnach: 'main'
            }
        }

        stage ('Update K8s manifest & push to repository') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialId: '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', passwordVariable: 'GIT_PASSWORD', usernameVariable: 'GIT_USERNAME')]) {
                        sh '''
                        cat deploy.yaml
                        sed -i '' "s/32/${BUILD_NUMBER}/g" deploy.yaml
                        cat deploy.yaml
                        git add deploy.yaml
                        git commit -m 'Updated the deploy yaml | Jenkins Pipeline'
                        git remote -v
                        git push https://github.com/makresh-dev/cicd-demo-manifests-repo.git HEAD:main
                        '''
                    }
                }
            }
        }
    }
}