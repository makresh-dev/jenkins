pipeline {
    agent none

    stages {
        stage('backend') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                sh 'mvn --version'
            }
        }

        stage('frontend') {
            agent {
                docker { image 'node:16-alpine' }
            }
            steps {
                sh 'node --version'
            }
        }

        stage('DB ') {
            agent {
                docker { image 'mysql:latest' }
            }
            steps {
                sh 'mysql --version'
            }
        }
    }
}
